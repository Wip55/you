{%  extends 'base.html.twig' %}

{% block body %}
<body class="bodyAccueil m-0">
    <main>
    
        <section class="sectionImage">
            <div id="imageAccueil">
            </div>
            <section class="" id="rechercheAccueil">
                <form method="post" class="justify-content-center ">
    
                    <h1 class="h3 mb-3 font-weight-bold text-center">Trouvez vos pieces detachée près de chez vous.</h1>
                    <div class="mt-1 mb-4 d-flex justify-content-between">
                        <p class="text-center m-auto font-weight-semibold">Découvrez notre séléction de produits..</p>  
                    </div>
    
    
                    {{ form(form, {'action': path('announces_page')})}}  
                    <a href="{{ path('announces_page')}}"><button class="form-control btn btn-lg mt-3 text-center" id="btnsignin" type="submit">Rechercher</button></a>
                </form>  
            </section>
        </section>
        <section class="mt-5 sectionDerniereAnnonce">
            <article>
                <h2 class="h3 font-weight-bold">Nos dernièrs Produits :</h2>
                <article>
                    <div class="d-flex justify-centent-center m-auto">
                        {% for a in annonces %}
                        <div class="card mt-5 ml-5 mr-5" style="min-width: 300px; max-width: 300px;">
                            <img src="{{ asset('asset/images/' ~ a.image )}}" alt="" width="100%" height="80%" class="m-auto">
                            <div class="card-body">
                              <h5 class="card-title">{{a.titre}}</h5>
                              <ul class="list-group list-group-flush">
                                <li class="list-group-item">Marque : {{a.prenom}}</li>
                              </ul>
                              <p class="card-text">{{ a.description|length > 100 ? a.description|slice(0, 100) ~ '...' : a.description  }}</p>
                              <button class="btn btn-lg text-center text-decoration-none"><a href="{{ path('annonce', {'id': a.id}) }}">Voir l'annonce</a></button>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </article>
        </section>
    </main>
</body>
{% endblock %}